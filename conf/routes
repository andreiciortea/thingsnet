# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /spec                       controllers.Application.spec

GET     /users/:id                  controllers.Application.getUserAccount(id: String)
POST    /users/create               controllers.Application.createUserAccount
POST    /users/delete               controllers.Application.deleteUserAccount

POST    /connections/create         controllers.Application.createConnection
POST    /connections/delete         controllers.Application.deleteConnection

POST    /messages/list              controllers.Application.getMessages
GET     /messages/:id               controllers.Application.getMessageById(id: String)
POST    /messages/create            controllers.Application.createMessage
POST    /messages/delete            controllers.Application.deleteMessage

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
